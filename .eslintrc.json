{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended"
  ],
  "plugins": ["i18next"],
  "rules": {
    "i18next/no-literal-string": ["error", {
      "markupOnly": false,
      "ignoreAttribute": ["id", "htmlFor", "className", "data-testid", "aria-hidden", "role", "href"]
    }]
  },
  "overrides": [
    {
      "files": ["scripts/**", "tests/**", "**/*.test.*", "**/*.spec.*"],
      "rules": {
        "i18next/no-literal-string": "off"
      }
    }
  ]
} 