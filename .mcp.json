{
	"mcpServers": {
		"task-master-ai": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"--package=task-master-ai",
				"task-master-ai"
			],
			"env": {
				"ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
				"OPENAI_API_KEY": "${OPENAI_API_KEY}",
				"GOOGLE_API_KEY": "${GOOGLE_API_KEY}",
				"NOTION_API_KEY": "${NOTION_TOKEN}"
			}
		},
		"playwright": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@executeautomation/playwright-mcp-server"
			]
		},
		"context7": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@context7/mcp-server"
			]
		}
	}
}
