{
  "name": "@decoded/ui",
  "version": "0.1.1",
  "description": "Design system components for Decoded applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "tailwind-preset.js"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./tailwind-preset": {
      "require": "./tailwind-preset.js",
      "default": "./tailwind-preset.js"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "import": "./dist/tokens/index.mjs",
      "require": "./dist/tokens/index.js",
      "default": "./dist/tokens/index.js"
    }
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.294.0",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "components",
    "design-system",
    "typescript",
    "tailwind"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/decoded/ui"
  },
  "bugs": {
    "url": "https://github.com/decoded/ui/issues"
  },
  "homepage": "https://decoded-ui.dev"
}
